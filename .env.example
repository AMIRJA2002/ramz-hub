# Database Configuration
MONGODB_URL=mongodb://your_username:your_password@mongodb:27017
MONGODB_DB_NAME=rasad_pedia
MONGODB_USERNAME=your_username
MONGODB_PASSWORD=your_password

# RabbitMQ Configuration
RABBITMQ_USER=your_rabbitmq_user
RABBITMQ_PASSWORD=your_rabbitmq_password

# Redis Configuration (for future use)
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=your_redis_password

# Celery Configuration (use same credentials as RabbitMQ)
CELERY_BROKER_URL=amqp://your_rabbitmq_user:your_rabbitmq_password@rabbitmq:5672//
CELERY_RESULT_BACKEND=rpc://

# Crawler Settings
CRAWLER_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36
CRAWLER_TIMEOUT=30
CRAWLER_MAX_CONCURRENT=10
CRAWLER_RETRY_ATTEMPTS=3
CRAWLER_RETRY_DELAY=5

# Scheduler Settings
ENABLE_SCHEDULER=true
CRAWL_INTERVAL_MINUTES=15

# API Configuration
API_TITLE=Rasad Pedia Crawler API
API_VERSION=1.0.0

# LLM API Keys (for translation)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Security
SECRET_KEY=your_very_strong_secret_key_here
API_KEY=your_api_key_here
